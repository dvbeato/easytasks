

  <div class="panel-heading">
    <h2 class="text-primary">Log in</h2>
  </div>

  <div class="panel-body">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-inputs">
  <%= f.error_notification %>

      <div class="input-group">
        <span class="input-group-addon">
          <%= fa_icon 'user' %>
        </span>
        <%= f.input :email, required: true, autofocus: true, label: false , placeholder: "Email address" %>
      </div>
      
      <div class="input-group">
        <span class="input-group-addon">
          <%= fa_icon 'lock' %>
        </span>
        <%= f.input :password, required: true, label: false, placeholder: "Password" %>
      </div>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn-lg btn-block btn-primary" %>
    </div>
  <% end %>
  </div>

  <div class="panel-footer">
    <%= render "devise/shared/links" %>
  </div>

