
<div class="modal fade" tabindex="-1" autofocus="true" role="dialog" id="new-task-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= simple_form_for task_list, html: { id: "new-task-form" } do |f| %>
      
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">New Task List</h4>
      </div>
      
      <div class="modal-body">
        <div class="input-group">
          <span class="input-group-addon">
            <%= fa_icon 'th-list' %>
          </span>
          <%= f.input :name, label: false, placeholder: "Task List Name" %>
        </div>
        <%= f.input :public, as: :boolean %>
        
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <%= f.button :submit, class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>


