<div data-task-list="<%= task_list.id %>">
<div class="action-status inline">
  <% if current_user? task_list.user %>
    <%= render "/task_lists/public_link", task_list: task_list %>
  <% else %>
    <%= render "/task_lists/favorite_link", task_list: task_list %>
  <% end %>
</div>

<a class="collapsed action-link" data-toggle="collapse" data-parent="#task-lists" href="#task-list-<%= task_list.id %>-content">
  <%= task_list.name %>
</a>

<%= link_to '', task_list_path(task_list), method: :delete, class: "delete" if current_user? task_list.user %>
</div>
