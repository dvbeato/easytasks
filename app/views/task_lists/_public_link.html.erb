<% if task_list.public %>
              
  <%= link_to task_list_path(task_list, task_list: {public: false}), method: :put, class: "public" do %>
    <%= fa_icon "public" %>
  <% end %>
    
<% else %>
    
  <%= link_to task_list_path(task_list, task_list: {public: true}), method: :put, class: "public" do %>
    <%= fa_icon "private" %>
  <% end %>

<% end %>
